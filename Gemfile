  gem 'sass-rails', '6.0.0'
  gem 'coffee-rails', '4.0.0'
  gem 'uglifier', '1.2.3'
end

gem 'jquery-rails', '4.0.0'

group :test do
  gem 'capybara', '1.1.2'
end

group :production do
  gem 'pg', '0.12.2'
end
